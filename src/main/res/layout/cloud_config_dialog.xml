<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cloud_config_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_cloud_service"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/cloud_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_host"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_host_label"
            android:layout_alignBottom="@+id/cloud_host"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_host"
            android:inputType="text"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/cloud_spinner"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_port"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_port_label"
            android:layout_alignBottom="@+id/cloud_port"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_port"
            android:inputType="text"
            android:layout_below="@+id/cloud_host"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_username"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_username_label"
            android:layout_alignBottom="@+id/cloud_username"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_username"
            android:inputType="text"
            android:layout_below="@+id/cloud_port"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_password"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_password_label"
            android:layout_alignBottom="@+id/cloud_password"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_password"
            android:inputType="textPassword"
            android:layout_below="@+id/cloud_username"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_accountID"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_accountID_label"
            android:layout_alignBottom="@+id/cloud_accountID"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_accountID"
            android:inputType="text"
            android:layout_below="@+id/cloud_password"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_deviceID"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_deviceID_label"
            android:layout_alignBottom="@+id/cloud_deviceID"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_deviceID"
            android:inputType="text"
            android:layout_below="@+id/cloud_host"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_OAuth_token"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_OAuth_token_label"
            android:layout_alignBottom="@+id/cloud_OAuth_token"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/cloud_OAuth_token"
            android:layout_below="@+id/cloud_deviceID"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_message_type"
            android:layout_marginLeft="10dp"
            android:id="@+id/cloud_messageType_label"
            android:layout_alignBottom="@+id/cloud_messageType"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cloud_messageType"
            android:layout_below="@+id/cloud_OAuth_token"
            android:layout_alignParentEnd="true"
            android:inputType="text"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/cloud_messageType_label" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_config_dialog_useSSL"
            android:id="@+id/cloud_useSSL"
            android:layout_below="@+id/cloud_messageType"
            android:layout_alignEnd="@+id/cloud_messageType" />

        <TextView
            android:text="@string/cloud_config_dialog_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_messageType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/cloudInfo"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>
</ScrollView>
